<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_Weather_App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MAUI Weather">

    <ScrollView>
        <VerticalStackLayout Padding="18" Spacing="12">
            <Label
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="Weather" />

            <Entry Placeholder="Enter city (π.χ. Athens)" Text="{Binding CityInput}" />

            <HorizontalStackLayout Spacing="8">
                <Button
                    Command="{Binding FetchCommand}"
                    HorizontalOptions="Fill"
                    Text="Get Weather" />
                <Button
                    Command="{Binding UseLocationCommand}"
                    HorizontalOptions="Fill"
                    Text="Use Current Location" />
            </HorizontalStackLayout>

            <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

            <Border Padding="12">
                <VerticalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="{Binding CityInput}" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="36"
                        Text="{Binding Temperature}" />
                    <Label FontSize="16" Text="{Binding Description}" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
